        <link rel="stylesheet" href="/style.css" media="all" />

        <!--[if lt IE 9]>
            <script src="{{assets_url}}/shared/js/html5shiv.js"></script>
        <![endif]-->
        <!-- TODO: Add GA -->
    </head>
    <body>
        <div class="header--top">
            LXLS
        </div>

        <header role="banner">
            <a href="/">LXLS</a>
        </header>

        <nav role="navigation">
            <ul class="navigation">
                <li class="active"><a href="#">Shop by Category</a></li>
                <li><a href="#">Shop by Brand</a></li>
                <li><a href="#">View Outfits</a></li>
                <li><a href="#">Why Buy</a></li>
                <li><a href="#">Easy Returns</a></li>
            </ul>
            <ul class="navigation--children">
                <li><a href="#">Tops</a></li>
                <li><a href="#">Blouses &amp; Shirts</a></li>
                <li><a href="#">Knitwear</a></li>
                <li><a href="#">Blazers</a></li>
                <li><a href="#">Dresses</a></li>
                <li><a href="#">Outerwear</a></li>
                <li><a href="#">Denim &amp; Trousers</a></li>
                <li><a href="#">Skirts</a></li>
                <li><a href="#">Shorts</a></li>
                <li><a href="#">Shoes &amp; Accessories</a></li>
            </ul>
        </nav>

        <div role="main">


            {{#list_page}}

                <section class="products"><!--

                    {{#products}}
                     --><article>
                            <a href="{{url}}">
                                {{#primary_image}}
                                    <img src="{{url-500}}" alt="{{title}}">
                                {{/primary_image}}

                                <h2>{{title}}</h2>
                                <p></p>
                                {{#in_stock}}
                                    <div class="price"><del>7000</del> {{price_with_currency}}</div>
                                {{/in_stock}}
                            </a>
                        </article><!--
                    {{/products}}

             --></section>

            {{/list_page}}


            {{#product_page}}

                {{#product}}
                    <article class="product" itemscope itemtype="http://schema.org/Product">
                        <section class="product__info">
                            <h1>{{title}}</h1>
                            <div itemprop="description">
                                {{description}}
                            </div>

                            <div class="price" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                                <del></del>
                                <span itemprop="price">{{price_with_currency}}</span>

                                <meta itemprop="priceCurrency" content="{{currency_code}}">
                                {{#in_stock}}<link itemprop="availability" href="http://schema.org/InStock">{{/in_stock}}
                                {{#out_of_stock}}<link itemprop="availability" href="http://schema.org/OutOfStock">{{/out_of_stock}}
                            </div>

                            {{#add_to_cart}}
                                {{#add_to_cart_button}}Add to cart{{/add_to_cart_button}}
                            {{/add_to_cart}}

                        </section><!--

                     --><figure class="product__media">
                            {{#all_images}}
                                <img src="{{url-500}}">
                            {{/all_images}}
                        </figure>
                    </article>
                {{/product}}

                <aside role="complementary">
                    {{#related_products}}
                        <h2>{{title}}<h2>
                    {{/related_products}}
                    <!-- TODO: Add related products -->

                    <nav>
                        <!-- TODO: Add breadcrumbs -->
                    </nav>
                </aside>

            {{/product_page}}


            {{#about_page}}

                <article>
                    <h1>About</h1>

                    {{store_description}}

                    {{#store_email}}
                        {{#lang}}Contact:{{/lang}} <a href="mailto:{{store_email}}">{{store_email}}</a>
                    {{/store_email}}
                </article>

            {{/about_page}}


        </div>

        <footer role="contentinfo">
            <ul>
                <li><a href="/about">About</a></li>
                <li><a href="#terms">Terms</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </footer>

        <!-- TODO: Remove -->
        <iframe name="tt_colophon" id="tt_colophon" src="https://tictail.com/colophon/lxls" style="position: fixed; z-index: 9999; top: 0px; right: 0px; height: 33px; overflow: hidden; background-image: none; border: 0px; width: 219px; background-position: initial initial; background-repeat: initial initial;"></iframe>
    </body>
</html>